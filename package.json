{
    "name": "detabot",
    "version": "0.0.1",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "deta-install": "curl -fsSL https://get.deta.dev/cli.sh | sh",
        "dev": "tsc-watch --onSuccess \"node dist/bot.js --dev\"",
        "deploy": "yarn deta update -e .env && tsc && yarn deta deploy",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write .",
        "git": "git add . && git cz -S && git push",
        "prepare": "husky install",
        "deta": "/home/node/.deta/bin/deta"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "dependencies": {
        "@grammyjs/auto-retry": "^1.1.1",
        "@grammyjs/menu": "^1.1.2",
        "@grammyjs/parse-mode": "^1.5.0",
        "date-fns": "^2.29.3",
        "date-fns-tz": "^1.3.7",
        "dotenv": "^16.0.3",
        "express": "4.18.2",
        "grammy": "1.12.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^18.11.9",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^8.27.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.5.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.2",
        "prettier": "^2.7.1",
        "tsc-watch": "^5.0.3",
        "typescript": "^4.8.4"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}